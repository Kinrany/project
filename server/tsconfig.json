{
  "compilerOptions": {
    // project settings
    "composite": true,
    "rootDir": "src",
    "outDir": "dist",

    // module resolution
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "importHelpers": true,

    // type checking
    "target": "es2015",
    "lib": ["dom", "es2015", "dom.iterable", "scripthost"],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
}
